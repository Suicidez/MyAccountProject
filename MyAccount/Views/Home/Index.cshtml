@{
    ViewBag.Title = "Home Page";
}
@Styles.Render("~/Content/main");
<div class="container">
    <div class="HeadPanalLogin">
        <p class="form-title">
            My Account
        </p>
     </div>
    <div class="row main">
        <div class="main-login main-center">
            <form class="" method="post" action="#">

                <div class="form-group">
                    <label for="name" class="cols-sm-2 control-label">User Name</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                            @Html.TextBox("txtUserName", null, new { @class = "form-control", @placeholder = "Please enter username" , @required = "required" })

                        </div>
                    </div>

                </div>

                <div class="form-group">
                    <label for="email" class="cols-sm-2 control-label">Password</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                            @Html.Password("txtPassword", null, new { @class = "form-control", @placeholder = "Please enter password" , @required = "required" })
                        </div>
                    </div>
                </div>



                       <div class="form-group">
                    
                        <input type="submit" value="Sign in" style="max-width : 100%;width : 100%" class="btn  btn-sm" />
                     
                    </div>
                  
                <div class="form-group">
                    <div style="width : 45%;display : inline-block">
                        <input type="button" value="Register For Free-Trial 30 days" style="max-width : 100%;width : 100%;white-space: normal;" class="btn btn-success btn-sm" />
                    </div>
                    <div style="width : 45%;display : inline-block;padding-left : 20px">
                        <input type="button" value="Buy product and join with us" style="max-width : 120%;width : 120%;white-space: normal;" class="btn btn-success btn-sm" />
                    </div>

                </div>


</form>

      </div>
    </div>
</div>

<div class="row">

</div>